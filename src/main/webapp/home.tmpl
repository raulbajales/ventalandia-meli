  <!-- BEGIN: header -->
  <div id="header" ng-controller="ventalandia.controller.TopbarController">
    <div class="logo"></div>
    <div class="generic-search">
      <i class="icon-search"></i>
      <input type="search" class="search-query search-input" placeholder="Buscar..." size="90"/>
    </div>
    <div class="btn btn-link logout" ng-click="confirmLogout()">
      <i class="icon-off"></i>  
      Salir
    </div>
    <!-- div class="notifications">
      <span class="btn btn-link">
        <i class="icon-exclamation-sign"></i>  
        Notificaciones
      </span>      
      <span class="badge badge-important counter" ng-show="summary.newQuestions > 0">{{summary.newQuestions}}</span >       
    </div -->  
  </div>
  <!-- END: header -->

  <!-- BEGIN: container -->
  <div id="container">
  
    <!-- BEGIN: center column -->
    <div id="center" class="column" ng-controller="ventalandia.controller.NewsController">
      <div class="newsfeed">
        <div class="news" ng-repeat="entry in newsfeed.entries" ng-click="showNewsDetails($event, entry)">
          <span class="icon {{entry.type}}"></span>
          <span class="info">
            <div class="header"><a href="#">{{entry.buyerNickName}}</a></div>
            <div class="message">Agrego una nueva pregunta a la publicacion:</div>
            <div class="footer"><a href="#">{{entry.itemTitle}}</a></div>
            <div class="date">{{entry.date}}</div>
          </span>
        </div>
        <div class="space"></div>
      </div>
    </div>
    <!-- END: center column -->

    <!-- BEGIN: right column -->
    <div id="right" class="column" ng-controller="ventalandia.controller.NewsDetailsController">
      <div class="space"></div>
      <div class="wrapper" ng-show="newsDetails != null">
        <div class="publication">
          <div class="header">Publicaci&oacute;n:</div>
          <img class="picture" ng-src="{{newsDetails.item.pictureUrl}}"></img>
          <div class="info">
            <div class="title">{{newsDetails.item.title}}</div>
          </div>
        </div>
        <div class="buyer">
          <div class="header">Cliente:</div>
          <img class="picture" ng-src="{{newsDetails.buyer.pictureUrl}}"></img>
          <div class="info">
            <div class="nickname">{{newsDetails.buyer.nickName}}</div>
          </div>
        </div>
        <div class="conversation">
          <div class="header">Conversaci&oacute;n:</div>
          <div class="thread" ng-repeat="question in newsDetails.questions">
            <div class="question">
              <div class="icon"></div>
              <div class="text">{{question.text}}</div>
            </div>
            <div class="answer">
              <div class="icon"><img ng-src="{{miniProfile.thumbnailUrl}}" class="thumbnail"></div>
              <div class="text" ng-hide="!question.answered">{{question.answer}}</div>
              <textarea ng-hide="question.answered" placeholder="Escriba su respuesta y presione Enviar!" ng-model="question.answer"></textarea>
              <button ng-hide="question.answered" class="send btn btn-inverse btn-small" type="button" ng-click="sendAnswer(question)">Enviar!</button>
            </div>
          </div>          
        </div>
      </div>  
    </div>
    <!-- END: right column -->

    <!-- BEGIN: left column -->
    <div id="left" class="column">
      <div class="miniprofile" ng-controller="ventalandia.controller.MiniProfileController">
        <img ng-src="{{miniProfile.thumbnailUrl}}" class="thumbnail">
        </img>
        <span class="info">
          <ul>
            <li>{{miniProfile.firstName}}</li>
            <li>{{miniProfile.lastName}}</li>
          </ul>
          <span class="reputation badge {{reputationClass}}">Reputacion</span>
        </span>
        <!-- ul class="nav nav-pills nav-stacked">
          <li>
            <a href="#"><i class="icon-user"></i>&nbsp;Ver Mi Perfil</a>
          </li>
        </ul -->        
      </div>
      <div class="navigation">
        <ul class="nav nav-pills nav-stacked">
          <li class="active">
            <a href="#"><i class="icon-home"></i>&nbsp;Novedades</a>
          </li>
          <li>
            <a href="#"><i class="icon-th-large"></i>&nbsp;Publicaciones</a>
          </li>
          <li>
            <a href="#"><i class="icon-briefcase"></i>&nbsp;Clientes</a>
          </li>
        </ul>        
      </div>
    </div>
    <!-- END: left column -->
 
  </div>
  <!-- END: container -->

  <!-- BEGIN: footer -->
  <div id="footer">
    <ul>
      <li><a href="#">Sobre Ventalandia</a></li>
